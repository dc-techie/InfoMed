<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/logo"
            android:src="@drawable/infomedlogo"
            android:padding="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/gray_rounded_rectangular_shape">

            <Button
                android:id="@+id/remindersButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Alerts"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:backgroundTint="#DA2627"/>

            <Button
                android:id="@+id/toolButton1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Search"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:backgroundTint="#DA2627"/>

            <Button
                android:id="@+id/settingsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:backgroundTint="#DA2627"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounded_gray_background_textbox"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/welcomeBarTextView"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal|top"
                android:text="Welcome to InfoMed â€“ Your Gateway to Personalized Health and Wellness!"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/cardview_dark_background"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/welcomeBarTextView"
                android:id="@+id/welcomeParagraph"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:text="At InfoMed, we believe in putting the power of health information directly into your hands. Our mission is to empower individuals to take control of their well-being through easy access to comprehensive health information. We understand that staying informed about your health, medications, and immunizations is crucial for a thriving life, and that's why we've developed a cutting-edge mobile app designed to be your personal health companion."
                android:textColor="@color/cardview_dark_background"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/toolButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/welcomeParagraph"
                android:layout_centerHorizontal="true"
                android:text="Try our tool here!"
                android:textSize="28dp"
                android:layout_weight="1"
                android:layout_margin="14dp"
                android:backgroundTint="#DA2627"/>


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/disclaimer"
            android:text="Disclaimer: While we aim to provide you with the most accurate information available, you should always consult with a medical professional about your options."
            android:textAlignment="center"
            android:layout_margin="4dp"
            android:fontFamily="sans-serif-black"
            android:textSize="14dp"
            android:textStyle="italic"
            android:textColor="@color/cardview_dark_background"/>

    </LinearLayout>

</ScrollView>